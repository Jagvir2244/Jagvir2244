<%=render "home/header3"%>
<section class="flex-shrink-0">
  <div class="container-fluid">
    <div class="container pt-4 pb-7 ">
      <div class="row justify-content-center">
        <div class="col-12 col-xs-12 col-sm-10 col-md-8 col-lg-6 col-xl-4 col-xxl-4 ">
          
     
              <h1 class="col-dark-blue f-m-1 ">All Product</h1>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-12 col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12 fs-5" >
  <table class="table table-striped table-bordered table-hover text-center border border-dark">
    <thead class="thead-dark text-center">
      <tr>
        <th>Product id</th>
        <th>product name</th>
        <th>product color</th>
        <th>Product price</th>
        <th>Product Edit</th>
        <th>Product View</th>
        <th>Product Remove</th>
      </tr>
    </thead>
    <% @products.each do |product| %>
    <tr>
      <td> <%= link_to product.id, products_path(product)  %> </td>
      <td> <%= link_to product.name, products_path(product)  %> </td>
      <td> <%= link_to product.color, products_path(product)  %> </td>
      <td> <%= link_to product.price, products_path(product)  %> </td>
      <td> <%= button_to 'Edit', edit_product_path(product), method: 'get' %> </td>
      <td> <%= button_to 'View', product_path(product), method: 'get' %> </td>
      <td> <%= button_to 'Remove', product_path(product), method: 'delete', data:{confirm: 'Are you sure?'}  %> </td>
    </tr>
    <% end %>
  </table>
  <br>
</div>

  <%= link_to "Add new product", new_product_path,class:"btn btn-dark"%>
  <br></br>
  <%= render 'home/footer' %>
</section>