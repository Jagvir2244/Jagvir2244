<%=render "home/header3"%>
<p style="color: green"><%= notice %></p>

<section class="flex-shrink-0">
  <div class="container-fluid">
  <div class="container pt-4 pb-7 ">
    <div class="row justify-content-center">
      <div class="col-9 col-xs-9 col-sm-9 col-md-8 col-lg-6 col-xl-4 col-xxl-4 ">
        <div class="row">
          <div class="col-12 position-relative  ">
            <h2 class="col-dark-blue f-m-1  ">  Product</h2>
            <table class="table table-striped table-bordered table-hover ">
              <thead class="thead-dark">
                <tr>
                  <th>Product id</th>
                  <th>product name</th>
                  <th>product color</th>
                  <th>Product price</th>
                </tr>
              </thead>
              <tr>
                <td><%= @product.id %></td>
                <td><%= @product.name %></td>
                <td><%= @product.color %></td>
                <td><%= @product.price %></td>
              </tr>
            </table>
            <div>

              <div class="mb-3 pt-4">
              <table border="2">
                <tr>
                  <td><%= link_to "Back to Products", products_path, class:"btn btn-dark" %></td>
                  <td><%= link_to "Edit Details ", edit_product_path, class:"btn btn-dark" %></td>
                  <td> <%= button_to 'Remove Product', product_path(@product), method: 'delete', data:{confirm: 'Are you sure?'}, class:"btn btn-dark"  %> </td>
                </tr>
              </table>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render 'home/footer' %>